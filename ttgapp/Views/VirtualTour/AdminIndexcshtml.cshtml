@model List<ttgapp.Models.VirtualTour>

@{
    ViewData["Title"] = "Manage Virtual Tours";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Virtual Tours (Admin)</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add New Tour</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Tourist Place</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tour in Model)
        {
            <tr>
                <td>@tour.Title</td>
                <td>@tour.TouristPlace?.TPName</td>
                <td>@tour.IsActive</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tour.VirtualTourId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@tour.VirtualTourId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
