@model ttgapp.Models.VirtualTour

@{
    ViewData["Title"] = "Edit Virtual Tour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var touristPlaces = ViewData["TouristPlaces"] as List<ttgapp.Models.TouristPlace>;
}

<h2>Edit Virtual Tour</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="VirtualTourId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ThumbnailImagePath">Thumbnail Image URL</label>
        <input asp-for="ThumbnailImagePath" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="VideoEmbedCode">YouTube Embed Code or iframe</label>
        <textarea asp-for="VideoEmbedCode" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ExternalTourLink">360° Virtual Tour Link</label>
        <input asp-for="ExternalTourLink" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TPId">Tourist Place</label>
        <select asp-for="TPId" asp-items="@(new SelectList(touristPlaces, "TPId", "TPName", Model.TPId))" class="form-control"></select>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Active</label>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
