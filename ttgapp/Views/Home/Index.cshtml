@model List<ttgapp.Models.TouristPlace>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Tamil Nadu Tourism Guide</h1>
</div>

<h2 class="mt-5">Popular Destinations</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var place in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@place.TPImagePath" class="card-img-top" alt="@place.TPName" style="height:200px; object-fit:cover;" />
                <div class="card-body">
                    <h5 class="card-title">@place.TPName</h5>
                    <p class="card-text">@place.TPDescription?.Substring(0, 70)...</p>
                </div>   
                <div class="card-footer">
                    <a href="@Url.Action("PublicDetails", "TouristPlaces", new { id = place.TPId })">Explore</a>

                </div>
            </div>
        </div>
    }
</div>
