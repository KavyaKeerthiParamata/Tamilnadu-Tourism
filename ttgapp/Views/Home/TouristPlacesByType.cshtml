@{
    ViewBag.Title = ViewBag.TypeName + " Tourist Places";
}

<h2>@ViewBag.TypeName Tourist Places</h2>

<div class="row">
@foreach (var place in Model)
{
    <div class="col-md-4">
        <div class="card mb-3">
            <img src="@place.TPImagePath" class="card-img-top" alt="@place.TPName" />
            <div class="card-body">
                <h5 class="card-title">@place.TPName</h5>
                <p class="card-text">@place.TPDescription.Substring(0, Math.Min(100, place.TPDescription.Length))...</p>
                    <a href="@Url.Action("PublicDetails", "TouristPlaces", new { id = place.TPId })">View Details</a>
                </div>
        </div>
    </div>
}
</div>


