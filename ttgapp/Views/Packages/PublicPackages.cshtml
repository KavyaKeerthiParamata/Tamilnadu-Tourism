@model List<ttgapp.Models.Package>

<h2 class="mt-4">Available Packages</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var pkg in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@pkg.PackageImagepath" class="card-img-top" alt="@pkg.PackageName" style="height:200px; object-fit:cover;" />
                <div class="card-body">
                    <h5 class="card-title">@pkg.PackageName</h5>
                    <p class="card-text">
                        @(pkg.PackageDescription?.Length > 70
                                            ? pkg.PackageDescription.Substring(0, 70) + "..."
                                            : pkg.PackageDescription)
                </p>

                </div>
                <div class="card-footer">
                    <span class="text-muted">₹@pkg.PackagePrice</span>
                    <a href="@Url.Action("PublicDetails", "Packages", new { id = pkg.PackageId })">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

