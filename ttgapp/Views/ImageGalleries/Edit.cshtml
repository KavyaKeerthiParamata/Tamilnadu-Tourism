@model ttgapp.Models.ImageGallery

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>ImageGallery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ImageGalleryId" />
            <div class="form-group">
                <label asp-for="ImageGalleryName" class="control-label"></label>
                <input asp-for="ImageGalleryName" class="form-control" />
                <span asp-validation-for="ImageGalleryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageGalleryFolderPath" class="control-label"></label>
                <input asp-for="ImageGalleryFolderPath" class="form-control" />
                <span asp-validation-for="ImageGalleryFolderPath" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ImageGalleryStatus" /> @Html.DisplayNameFor(model => model.ImageGalleryStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TPId" class="control-label"></label>
                <select asp-for="TPId" class="form-control" asp-items="ViewBag.TPId"></select>
                <span asp-validation-for="TPId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

