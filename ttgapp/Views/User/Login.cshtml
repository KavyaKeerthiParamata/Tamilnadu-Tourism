@model ttgapp.Models.UserLogin

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        /*background: linear-gradient(135deg, #f0fff0, #e6ffe6, #f9fff9); */
        font-family: 'Segoe UI', Tahoma, sans-serif;
        color: #333;
    }

    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-card {
        width: 400px;
        padding: 30px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .login-card h3 {
        text-align: center;
        color: #333;
        font-weight: bold;
    }

    .btn-primary {
        width: 100%;
    }

    .card-footer {
        text-align: center;
        margin-top: 10px;
    }

    .card-footer a {
        text-decoration: none;
        color: #007bff;
    }

    .card-footer a:hover {
        text-decoration: underline;
    }
</style>

<div class="center-container">
    <div class="card login-card">
        <div class="card-header">
            <h3>Login</h3>
        </div>
        <div class="card-body">
            <form asp-controller="User" asp-action="ValidateUser" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="UserId" class="form-label"></label>
                    <input asp-for="UserId" class="form-control" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Sign In" class="btn btn-primary" />
                </div>
                <div style="text-align: center; margin-top: 15px;">
    <span>Don't have an account? </span>
    <a href="@Url.Action("Register", "User")">Register</a>
</div>
    
            </form>
        </div>
    </div>
</div>